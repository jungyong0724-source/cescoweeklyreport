function fetchNaverTrendRange(start, end) {
  const url = "https://openapi.naver.com/v1/datalab/search";
  const payload = { 
    "startDate": start, 
    "endDate": end, 
    "timeUnit": "date", 
    "keywordGroups": NAVER_KEYWORD_GROUPS.slice(0, 5) 
  };
  const options = { 
    "method": "post", "contentType": "application/json", 
    "headers": { "X-Naver-Client-Id": NAVER_CLIENT_ID, "X-Naver-Client-Secret": NAVER_CLIENT_SECRET },
    "payload": JSON.stringify(payload), "muteHttpExceptions": true 
  };
  try {
    const res = UrlFetchApp.fetch(url, options);
    const json = JSON.parse(res.getContentText());
    let merged = [];
    if (json.results && json.results[0] && json.results[0].data) {
      json.results[0].data.forEach(d => merged.push({ period: d.period, ratios: [] }));
      json.results.forEach((g, gIdx) => g.data.forEach(d => {
        let t = merged.find(r => r.period === d.period);
        if (t) t.ratios[gIdx] = d.ratio;
      }));
    }
    return merged;
  } catch (e) { console.log("Naver API Error"); return []; }
}

